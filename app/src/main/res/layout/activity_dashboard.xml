<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <TextView
        android:id="@+id/tsttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have logged in successfully"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"

        />
        <TextView
            android:id="@+id/userlbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:layout_below="@+id/tsttxt"
            android:text="Username :"

            />
    <TextView
        android:id="@+id/emaillbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/userlbl"
        android:text="E-mail :"

        />
    <TextView
        android:id="@+id/phonelbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/emaillbl"
        android:text="Phonenumber :"

        />
    <Button
        android:id="@+id/logoutbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="log out"
        android:layout_below="@+id/phonelbl"
        android:layout_marginTop="36dp"
        android:layout_centerHorizontal="true"

        android:onClick="logout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoutbtn"

        >

      <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center_horizontal"
          android:columnOrderPreserved="true"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/teal_700"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background"
                android:layout_gravity="center"
                android:layout_margin="35dp"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gpa calculator"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/cardview_dark_background"
            app:cardCornerRadius="15dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background"
                android:layout_gravity="center"
                android:layout_margin="35dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gpa calculator"
                android:textStyle="bold"
                android:padding="8dp"
                android:textSize="18dp"
                android:textColor="@color/white"

                android:layout_gravity="center_horizontal"
                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/cardview_dark_background"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background"
                android:layout_gravity="center"
                android:layout_margin="35dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gpa calculator"
                android:textStyle="bold"
                android:padding="8dp"
                android:textSize="18dp"
                android:textColor="@color/white"

                android:layout_gravity="center_horizontal"
                />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/cardview_dark_background"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background"
                android:layout_gravity="center"
                android:layout_margin="35dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gpa calculator"
                android:textStyle="bold"
                android:padding="8dp"
                android:textSize="18dp"
                android:textColor="@color/white"

                android:layout_gravity="center_horizontal"
                />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/cardview_dark_background"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background"
                android:layout_gravity="center"
                android:layout_margin="35dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gpa calculator"
                android:textStyle="bold"
                android:padding="8dp"
                android:textSize="18dp"
                android:textColor="@color/white"

                android:layout_gravity="center_horizontal"
                />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/cardview_dark_background"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background"
                android:layout_gravity="center"
                android:layout_margin="35dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gpa calculator"
                android:textStyle="bold"
                android:padding="8dp"
                android:textSize="18dp"
                android:textColor="@color/white"

                android:layout_gravity="center_horizontal"
                />

        </androidx.cardview.widget.CardView>


        </GridLayout>
    </ScrollView>
</RelativeLayout>
